<?xml version="1.0"?>
<config>
    <tabs>
        <sm>
            <label>Magentech.com</label>
            <sort_order>205</sort_order>
        </sm>
    </tabs>    
    <sections>
    	<dynamicslideshow_cfg translate="label" module="dynamicslideshow">
    		<label>SM Dynamic Slideshow</label>            
            <tab>sm</tab>
			<frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<!-- start general group -->
            	<general translate="label">
            		<label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<isenabled translate="label" module="core">
							<label>Enabled</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</isenabled>
	                	<title translate="label">
	                		<label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</title>
                    </fields>
	            </general>
	            <!-- end general group -->
	            
				<!-- start module setting group -->
            	<module_setting translate="label">
            		<label>Module settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<navigationArrows translate="label">
							<label>Navigation Arrows</label>
							<sort_order>5</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>dynamicslideshow/system_config_source_listArrows</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</navigationArrows>
                        <button_style translate="label">
							<label>Button Style</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>dynamicslideshow/system_config_source_listStyle</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</button_style>	
                        <shownavigation translate="label">
							<label>Show Navigation</label>
							<sort_order>11</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</shownavigation>	
						<shownavigation_when translate="label">
							<label>Show Navigation When</label>
							<sort_order>12</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>dynamicslideshow/system_config_source_showNavigation</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<!--depends><shownavigation>1</shownavigation></depends-->
						</shownavigation_when>						
						<navigationhalign translate="label">
							<label>Navigation Vertical Align</label>
							<sort_order>13</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>dynamicslideshow/system_config_source_listVertical</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</navigationhalign>	
						<navigationvalign translate="label">
							<label>Navigation Horizontal Align</label>
							<sort_order>14</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>dynamicslideshow/system_config_source_listHorizontal</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</navigationvalign>	
						<timer_show translate="label">
							<label>Show Timer</label>
							<sort_order>15</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</timer_show>
                        <timer_position translate="label">
							<label>Timer Position</label>
							<sort_order>20</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>dynamicslideshow/system_config_source_listPosition</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><timer_show>1</timer_show></depends>
						</timer_position>	
						<play translate="label">
							<label>Auto Play</label>
							<sort_order>21</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</play>						
                        <pause translate="label">
							<label>Stop When Hover</label>
							<sort_order>25</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pause>							
                        <interval translate="label">
                            <label>Interval</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>27</sort_order>
							<validate>validate-greater-than-zero</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </interval>
                    </fields>
	            </module_setting>
	            <!-- end module setting group -->	            
	            
	            <!-- start product_selection group -->
	            <product_selection translate="label">
	            	<expanded>1</expanded>
	            	<label>Product selection</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
	            	<fields>
	            		<slider1 translate="label">
		            		<label>Slide Show1</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider1>
	            		<slider2 translate="label">
		            		<label>Slide Show2</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>20</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider2>
	            		<slider3 translate="label">
		            		<label>Slide Show3</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>30</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider3>
	            		<slider4 translate="label">
		            		<label>Slide Show4</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>40</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider4>
	            		<slider5 translate="label">
		            		<label>Slide Show5</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>50</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider5>
	            		<slider6 translate="label">
		            		<label>Slide Show6</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>60</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider6>
	            		<slider7 translate="label">
		            		<label>Slide Show7</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>70</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider7>
	            		<slider8 translate="label">
		            		<label>Slide Show8</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>80</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider8>
	            		<slider9 translate="label">
		            		<label>Slide Show9</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>90</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider9>
	            		<slider10 translate="label">
		            		<label>Slide Show10</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>100</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slider10>
	            	</fields>
	            </product_selection>
	            
	            <advanced translate="label">
	            	<label>Advanced settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>45</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<include_jquery translate="label">
                    		<label>Include jQuery</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</include_jquery>                  	
	            		<pretext translate="label">
		            		<label>Pre-text</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>20</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pretext>
	            		<posttext translate="label">
		            		<label>Post-text</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>30</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</posttext>
					</fields>
	            </advanced>
	            
            </groups>
    	</dynamicslideshow_cfg>
    </sections>
</config>